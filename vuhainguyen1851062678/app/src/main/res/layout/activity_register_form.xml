<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnregis"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aa"
    tools:context=".RegisterForm">


    <LinearLayout
        android:id="@+id/lglg"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="200px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="ĐĂNG KÝ"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/un"
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:layout_below="@id/lglg"
        android:layout_marginTop="40px"
        android:orientation="horizontal"
        android:paddingLeft="100px"
        android:paddingRight="100px">

        <EditText
            android:id="@+id/txtusername"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:ems="10"
            android:hint="Tên tài khoản"
            android:inputType="textPersonName"
            android:paddingLeft="50px"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:layout_below="@id/un"
        android:layout_marginTop="40px"
        android:orientation="horizontal"
        android:paddingLeft="100px"
        android:paddingRight="100px">

        <EditText
            android:id="@+id/txtpassword"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/ic_baseline_gpp_good_24"
            android:ems="10"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="50px"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnreset"
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:layout_below="@id/pass2"
        android:layout_marginTop="40px"
        android:orientation="horizontal"
        android:paddingLeft="100px"
        android:paddingRight="100px">

        <Button
            android:id="@+id/btnregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:text="Đăng ký"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/background_light" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/creatacc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnreset"
        android:layout_marginTop="40px"
        android:orientation="horizontal"
        android:paddingLeft="100px"
        android:paddingRight="100px">

        <TextView
            android:id="@+id/alreadyaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bạn đã có tải khoản rồi?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pass2"
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:layout_below="@id/pass"
        android:layout_marginTop="40px"
        android:orientation="horizontal"
        android:paddingLeft="100px"
        android:paddingRight="100px">

        <EditText
            android:id="@+id/txtrepassword"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/ic_baseline_gpp_good_24"
            android:ems="10"
            android:hint="Nhâp lại mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="50px"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>